---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-mario-sky-overworld text-mario-sky-font">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="max-w-[1000px] min-h-screen h-fit mx-auto">
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	@font-face {
		font-family: "SK-Regular";
		src: url(/portfolio/fonts/Silkscreen-Regular.ttf);
	}

	@font-face {
		font-family: "SuperMarioBros";
		src: url(/portfolio/fonts/Super-Mario-Bros.ttf);
	}

	@font-face {
		font-family: "Player2";
		src: url(/portfolio/fonts/PressStart2P.ttf);
	}

	@font-face {
		font-family: "Arcade";
		src: url(/portfolio/fonts/Arcade-Classic.ttf);
	}
</style>
