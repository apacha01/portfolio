---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section
	class="mt-6 flex flex-wrap items-center justify-center md:justify-end gap-10 font-bold text-2xl text-mario-sky-font"
>
	<h3 class="text-base font-p2 uppercase">{title}:</h3>
	<div class="flex justify-evenly items-center gap-6">
		<slot />
	</div>
</section>
