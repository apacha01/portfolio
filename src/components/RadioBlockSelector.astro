---
interface Props {
	title: string;
	class?: string;
}

const { title, class: className } = Astro.props;
---

<section
	class=`flex flex-wrap items-center justify-center lg:justify-end pr-2 gap-5 font-bold text-2xl text-mario-sky-font ${className}`
>
	<h3 class="text-base font-p2 uppercase">{title}:</h3>
	<div class="flex justify-evenly items-center gap-6">
		<slot />
	</div>
</section>
