---
interface Props {
	ballColor?: string;
	bordersColor?: string;
	shineColor?: string;
	class?: string;
}

const {
	ballColor = "themed-scenery-main",
	bordersColor = "themed-scenery-borders",
	shineColor = "themed-scenery-light",
