---
import BreakableBlock from "./sprites/BreakableBlock.astro";

interface Props {
	text: string;
	class?: string;
}

const { text, class: className } = Astro.props;
---

<div class=`relative ${className}`>
	<BreakableBlock className="absolute w-full h-full -z-50" />
	<pre
		class="w-full h-full relative px-8 py-4 text-pretty max-w-prose font-skreg text-xl sm:text-2xl z-10 before:-z-10 before:absolute before:top-0 before:left-0 before:w-full before:h-full before:bg-black before:opacity-50">{text}</pre>
</div>
