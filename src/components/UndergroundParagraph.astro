---
import BreakableBlock from "./sprites/BreakableBlock.astro";
import MarioBush from "./sprites/SingleBush.astro";

interface Props {
	text: string;
	class?: string;
	bushes?: boolean;
}

const { text, bushes = false } = Astro.props;
---

<div {...Astro.props}>
	{
		bushes ? (
			<div class="flex justify-between">
				<MarioBush class="aspect-[2/1] w-2/5 max-w-40" />
				<MarioBush class="aspect-[2/1] w-2/5 max-w-40" />
			</div>
		) : null
	}
	<div class="w-full h-fit relative">
		<BreakableBlock class="absolute w-full h-full -z-50" />
		<pre
			class="w-full h-full relative px-8 py-4 text-pretty max-w-prose font-skreg text-xl sm:text-2xl z-10 before:-z-10 before:absolute before:top-0 before:left-0 before:w-full before:h-full before:bg-black before:opacity-50">{text}</pre>
	</div>
</div>
